<Window x:Class="FeatherMark.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FeatherMark"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        Background="#2b2b2b">
    <Grid Margin="10,10,0,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <Button Content="addfolder" Width="50" Height="50" VerticalAlignment="Top" Click="Addfolder_Click" />
            <Button Content="addfile" Width="50" Height="50" VerticalAlignment="Top" Click="Addfile_Click" />
            <Button Content="delete" Width="50" Height="50" VerticalAlignment="Top" />
        </StackPanel>
        
        <ScrollViewer Grid.Column="0" Grid.Row="1" Margin="0,10,0,0">
            <StackPanel Margin="10,0,3,0" Name="itiran">
                <ToggleButton Content="folder" Width="150" Height="50" VerticalAlignment="Top" Click="Button_Click"/>
                <ToggleButton Content="file" Width="130" Height="50" VerticalAlignment="Top" HorizontalAlignment="Right" Click="Button_Click"/>
                <ToggleButton Content="file2" Width="130" Height="50" VerticalAlignment="Top" HorizontalAlignment="Right" Click="Button_Click"/>
            </StackPanel>
        </ScrollViewer>
        <TextBox Grid.Column="1" Grid.Row="1" Background="#222222" BorderThickness="0" Foreground="#ffffff" FocusVisualStyle="{x:Null}" AcceptsReturn="True"/>

        <TextBlock Text="150" Grid.Column="1" Grid.Row="2" Margin="5,0,5,5" Foreground="#ffffff" HorizontalAlignment="Right" VerticalAlignment="Center"/>
    </Grid>
</Window>
